alias gaa='git add .'
alias gch='git checkout'
alias gc='git commit -m '
alias gcnv='git commit --no-verify -m '
alias gpl='git pull'
alias gp='git push'
alias gs='git status'
alias gb='git branch --sort=-committerdate'
alias c='clear'
alias x='exit'
alias gl='git log --pretty=format:"%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s" --date=short'
alias gd='git diff'
alias gf='git fetch'
alias grep='grep --color'
alias tsfe="npm run typecheck -w=frontend"
alias tsbe="npm run typecheck -w=api"
alias ts="npm run typecheck"
alias tt="npm run test"
alias ttbe="npm run test -w=api"
alias ni="npm install"
alias p="npm run prettier:fix"
alias l="npm run lint"
alias w="windsurf"
alias cld="claude --dangerously-skip-permissions"
alias cldc="claude --dangerously-skip-permissions --continue"
alias cl="claude"
alias clc="claude --continue"

# Kill process on specified port
killport() {
  kill -9 $(lsof -ti:$1)
}
